/* نخلي كل container فيه Section و Aside يستخدم Grid */
.container {
  display: grid;
  grid-template-columns: 70% 30%; 
  align-items: start; 
}


.container > section,
.container > aside {
  padding: 0 30px;
  box-sizing: border-box;
}

