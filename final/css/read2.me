    /* Search Form Styles */
    .search-form {
        margin-top: 30px;
        /* مسافة من فوق */
        display: flex;
        /* نخلي العناصر جواته تتحط في خط واحد */
        justify-content: center;
        /* نخليهم يتوسّطوا (بالعرض) */
        gap: 10px;
        /* فراغ بين العناصر */
        flex-wrap: wrap;
        /* لو الشاشة صغيرة، العناصر تنزل تحت بعض */
    }

    .search-form select,
    .search-form button {
        padding: 10px 15px;
        /* حشوة داخلية: تخلي العنصر أكبر وأسهل للضغط */
        font-size: 16px;
        /* حجم الخط */
        border: none;
        /* نشيل الحدود الافتراضية */
        border-radius: 5px;
        /* زوايا مدوّرة */
    }

    .search-form select {
        background: #fff;
        /* الخلفية بيضاء */
        min-width: 160px;
        /* أقل عرض للقائمة 160px */
    }

    .search-form button {
        background-color: #313728;
        /* لون الخلفية غامق (أخضر زيتوني/أسود مائل) */
        color: #fff;
        /* الخط أبيض */
        font-weight: bold;
        /* خط غامق */
        cursor: pointer;
        /* المؤشر يتحول ليد عند المرور */
        transition: 0.3s;
        /* حركة ناعمة عند التغيير */
    }

    .search-form button:hover {
        background-color: #444;
        /* يغيّر اللون لو مرّرت الماوس عليه */
    }
    /* End of Search Form Styles */



